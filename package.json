{
  "name": "equipment-control-panel",
  "version": "0.2.0",
  "description": "Equipment Control Panel - Windows application for TCP equipment control with 50Hz auto-send",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "build:dir": "electron-builder build --win --dir"
  },
  "keywords": [
    "electron",
    "tcp",
    "communication",
    "control-panel",
    "equipment"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.equipment.controlpanel",
    "productName": "Equipment Control Panel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "config.js",
      "validation.js",
      "theme-manager.js",
      "language-manager.js",
      "locales.js",
      "index.html",
      "settings.html",
      "styles.css",
      "renderer/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "*.html",
      "renderer.js",
      "renderer/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}
